            </exclusions>
        </dependency>
        <!--        <dependency>
                    <groupId>me.lucko</groupId>
                    <artifactId>commodore</artifactId>
                    <version>1.5</version>
                    <scope>compile</scope>
                </dependency>-->
    </dependencies>
</project>
